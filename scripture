#!/bin/sh

# Usage sanitization
[ -z "$1" ] && echo "usage: scripture <deck file>" && exit 1

# TSV by default, otherwise use user's preference
DELIMITER=${SCRIPTURE_DELIMITER:-"	"}

while IFS="$DELIMITER" read -r front back repetition_number easiness_factor inter_repetition_interval
do
	echo "-------------"
	echo "front: $front"
	echo "back: $back"
	echo "n: $repetition_number"
	echo "EF: $easiness_factor"
	echo "I: $inter_repetition_interval"
done < "$1"
